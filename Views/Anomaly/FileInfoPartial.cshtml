@model Q_verify_2025.Models.FileInfoModel

@if (ViewData["FileInfo"] != null)
{
    var fileInfoModel = (Q_verify_2025.Models.FileInfoModel)ViewData["FileInfo"];
    <div class="alert alert-secondary mt-3 d-flex flex-wrap">
        <span class="me-3"><strong>Fil:</strong> @fileInfoModel.FileName</span>
        <span class="me-3"><strong>Storlek:</strong> @fileInfoModel.FileSize KB</span>
        <span class="me-3"><strong>Format:</strong> @fileInfoModel.FileFormat</span>
        <span class="me-3"><strong>Uppladdad:</strong> @fileInfoModel.UploadTime</span>

        @if (fileInfoModel.AnomalyCount > 0)
        {
            <span class="me-3"><strong>Antal avvikelser:</strong> @fileInfoModel.AnomalyCount</span>
        }
        else
        {
            <span class="me-3"><strong>Inga avvikelser hittades.</strong></span>
        }
    </div>
}
