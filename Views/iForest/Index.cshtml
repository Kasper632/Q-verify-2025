@{
    ViewData["Title"] = "iForest - Anomaly Detection";
}

<h1>Upload File for Anomaly Detection</h1>

<form asp-controller="iForest" asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Choose a CSV file:</label>
        <input type="file" name="file" class="form-control" accept=".csv" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Upload & Analyze</button>
</form>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-info mt-3">
        @ViewData["Message"]
    </div>
}

@if (ViewData["Anomalies"] != null && ((List<Dictionary<string, string>>)ViewData["Anomalies"]).Count > 0)
{
    <h2 class="mt-4">Detected Anomalies</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Industry</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var anomaly in (List<Dictionary<string, string>>)ViewData["Anomalies"])
            {
                <tr>
                    <td>@anomaly["Name"]</td>
                    <td>@anomaly["Industry"]</td>
                    <td>@anomaly["Description"]</td>
                </tr>
            }
        </tbody>
    </table>
}
